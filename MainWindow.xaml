<Window x:Class="HqNotenverwaltung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HqNotenverwaltung"
        mc:Ignorable="d"
        Title="Notenverwaltung" Height="450" Width="1600"
        Background="SlateGray"
        FontSize="22">
    <Grid>
        <TabControl>
            <TabItem Header="Schuljahr">
                <Grid Background="#252526">
                    <Label x:Name="LblSchoolyear"
                           Content="Schuljahr" 
                           Foreground="AntiqueWhite" 
                           Margin="10,10,0,0" Width="110" Height="40"
                           HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <ComboBox x:Name="ComboBoxSchoolyear"
                              Background="AntiqueWhite" Foreground="Black"
                              Margin="120,12,0,0" Width="110" Height="36"
                              HorizontalAlignment="Left"  VerticalAlignment="Top" 
                              ItemsSource="{Binding Path=Years}"
                              SelectedValue="{Binding Path=SelectedYear}" 
                              RenderTransformOrigin="0.481,-0.347"
                              />
                    <Label x:Name="LblCalculation"
                           Content="Durchrechnung" 
                           Foreground="AntiqueWhite" 
                           Margin="230,10,0,0" Width="160" Height="40"
                           HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <ComboBox x:Name="ComboBoxSemstered"
                              Background="AntiqueWhite" Foreground="Black"
                              Margin="400,12,0,0" Width="110" Height="36"
                              HorizontalAlignment="Left"  VerticalAlignment="Top" 
                              ItemsSource="{Binding Path=SemesteredOptions}"
                              SelectedValue="{Binding Path=SelectedSemestered}" 
                              RenderTransformOrigin="0.481,-0.347"
                              />

                    <Button Content="Neu" 
                            Margin="10,55,0,0" Width="110" Height="36"
                            HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                    <Button Content="Bearbeiten" 
                            Margin="120,55,0,0" Width="110" Height="36"
                            HorizontalAlignment="Left"  VerticalAlignment="Top"/>

                </Grid>

            </TabItem>
            <TabItem Header="SoontoCome">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
